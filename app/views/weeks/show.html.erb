<% provide(:title, "#{@week.season.year} week #{@week.week_num}") %>
<% provide(:year, "#{@week.season.year}") %>
<div class="row">
  <div class="span2">
   <ul>
      <% @week.season.weeks.sort_by { |a| a.week_num }.each do |w| %>
        <li>
              <%= link_to "Week #{w.week_num}",   week_path(w) %>
        </li>
      <% end %>
    </ul>
    <ul>
  </div> 
  <div class="span6 offset1">
    <% if @games.any? %>
      <h3>Week <%= @week.week_num %> Games (<%= @games.count %>)</h3>
      <ol class="games">
        <%= render @games %>
      </ol>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span6 offset4">
    <%= link_to "Entry...", user_entry_path(@user, @entry), class: "btn btn-primary" %>
    <%= link_to "What if", what_if_week_path, class: "btn btn-primary" %>
    <%= link_to "Results", result_week_path, class: "btn btn-primary" %>
    <% if @user.admin %>
      <%= link_to "Entries Summary", entry_list_week_path, class: "btn btn-primary" %>
    <% end %>
        <p>
    <%= link_to "FOY", foy_season_path(@week.season) %>
    <p><%= link_to "Season", season_path(@week.season) %>
  </div>
</div>
